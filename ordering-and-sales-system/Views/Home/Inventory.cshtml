<script>
// Function to handle edit button click
function handleEditButtonClick(row) {
  // Get product information from the table row
  const productName = row.cells[1].innerText;
  const category = row.cells[2].innerText;
  const quantity = parseFloat(row.cells[3].querySelector('.num').innerText.replace(/[^0-9.-]+/g,"")); // Parse as a float
  const price = parseFloat(row.cells[4].innerText.replace(/[^0-9.-]+/g,"")).toFixed(2); // Format as decimal with two decimal places
  const materialExpenses = parseFloat(row.cells[5].innerText.replace(/[^0-9.-]+/g,"")).toFixed(2); // Format as decimal with two decimal places
  const status = row.cells[6].innerText;

  // Populate the form fields
  document.getElementById('prod-name').value = productName;
  document.getElementById('category').value = category;
  document.getElementById('quantity').value = quantity;
  document.getElementById('price').value = price;
  document.getElementById('prod-cost').value = materialExpenses;
  document.getElementById('prod-status').value = status;

  // Set button text to "Save Edit"
  document.querySelector('#add-btn2').innerText = 'Save Edit';

  // Display the pop-up
  openPopup('Edit Product', true);
}

// Function to open popup
function openPopup(title, isEdit = false) {
  const popup = document.querySelector('.pop-up');
  const formTitle = document.querySelector('.pop-up h2');
  const submitButton = document.querySelector('#add-btn2');

  // Set form title
  formTitle.innerText = title;

  // Set button text to "Add Product" for new entries
  if (!isEdit) {
    submitButton.innerText = 'Add Product';
  }

  // Open the popup
  popup.classList.add('active');
}

